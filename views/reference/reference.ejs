<% include ./partials/header %>
    
    <div class="row">
        <h1 style="text-align: center;">Add New Reference</h1>
        <hr>
        <form role="form" class="form-horizontal" id="newReference" action="/api/u/<%= userId %>/ref" method="POST">  
            <div class="col-sm-2"></div>
            <div class="col-sm-8">
                <div class="form-group">
                    <div class="col-sm-6">
                        <label class="pull-left" for="name">Name</label>
                        <input class="form-control" type="text" name="reference[name]" placeholder="name" required>
                    </div>
                    <div class="col-sm-6">
                        <label class="pull-left" for="company">Company</label>
                        <input class="form-control" type="text" name="reference[company]" placeholder="company" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-6">
                        <label class="pull-left" for="position">Position</label>
                        <input class="form-control" type="text" name="reference[position]" placeholder="position" required>
                    </div>
                    <div class="col-sm-6">
                        <label class="pull-left" for="relationship">Relationship</label>
                        <input class="form-control" type="text" name="reference[relationship]" placeholder="relationship" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-6">
                        <label class="pull-left" for="phone">Phone</label>
                        <input class="form-control" type="tel" name="reference[phone]" placeholder="phone" required>
                    </div>
                    <div class="col-sm-6">
                        <label class="pull-left" for="email">Email</label>
                        <input class="form-control" type="email" name="reference[email]" placeholder="email" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <label class="pull-left" for="note">Note</label>
                        <input class="form-control" type="text" name="reference[note]" placeholder="note" >
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <label class="pull-left" for="writtenRef">Written Reference (If Applicable)</label>
                        <textarea id="coverLetterBody" class="form-control" type="text" rows="12" name="reference[writtenRef]" placeholder="If this person has provided a written reference, paste it here" ></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <button class="btn btn-lg btn-success btn-block">Submit!</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <a class="btn btn-lg btn-primary btn-block" href="/u/<%= userId %>">Back</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
    
    
<% include ./partials/footer %>


